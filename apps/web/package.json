{
  "name": "aplifyai-web",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:static": "rm -rf .next && mv src/app/api src/app/_api && next build && mv src/app/_api src/app/api",
    "start": "next start",
    "lint": "eslint",
    "test:local": "playwright test",
    "deploy": "../../deploy-cloudrun.sh",
    "deploy:web": "../../deploy-cloudrun.sh",
    "deploy:preview": "npm run build && firebase hosting:channel:deploy preview",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build:static && electron-builder"
  },
  "dependencies": {
    "@aplifyai/analytics": "*",
    "@aplifyai/api": "*",
    "@aplifyai/config": "*",
    "@aplifyai/constants": "*",
    "@aplifyai/errors": "*",
    "@aplifyai/flags": "*",
    "@aplifyai/hooks": "*",
    "@aplifyai/logger": "*",
    "@aplifyai/storage": "*",
    "@aplifyai/test-utils": "*",
    "@aplifyai/types": "*",
    "@aplifyai/ui": "*",
    "@aplifyai/utils": "*",
    "@aplifyai/validation": "*",
    "@auth/firebase-adapter": "^2.11.1",
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "@google/generative-ai": "^0.24.1",
    "@hello-pangea/dnd": "^18.0.1",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@monaco-editor/react": "^4.7.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "date-fns": "^4.1.0",
    "firebase": "^12.6.0",
    "firebase-admin": "^13.6.0",
    "framer-motion": "^12.23.24",
    "jose": "^6.1.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.555.0",
    "next": "16.0.3",
    "next-auth": "^5.0.0-beta.30",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.1",
    "react-icons": "^5.5.0",
    "recharts": "^3.4.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.aplifyai.app",
    "productName": "AplifyAI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    }
  }
}
