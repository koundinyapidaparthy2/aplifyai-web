# =============================================================================
# JOBSEEK CHROME EXTENSION - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# =============================================================================
# 
# NOTE: Vite exposes environment variables to the client using the VITE_ prefix.
# Only variables prefixed with VITE_ will be available in your application code.
# Access them using import.meta.env.VITE_VARIABLE_NAME
#
# =============================================================================

# -----------------------------------------------------------------------------
# API ENDPOINTS
# -----------------------------------------------------------------------------

# Resume Generator API Base URL
# Development: http://localhost:8080
# Production: https://resume-generator-148210206342.us-central1.run.app
VITE_API_BASE_URL=https://resume-generator-148210206342.us-central1.run.app

# Portfolio Backend API URL (for future use)
# Development: http://localhost:3001
# Production: https://your-portfolio-backend.com
VITE_PORTFOLIO_API_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------

# Application environment: development, staging, production
VITE_APP_ENV=production

# Enable debug mode (shows console logs and additional info)
VITE_DEBUG_MODE=false

# Extension version (should match manifest.json)
VITE_APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# FEATURE FLAGS (Optional)
# -----------------------------------------------------------------------------

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable AI-powered job matching
VITE_ENABLE_AI_MATCHING=false

# -----------------------------------------------------------------------------
# CHROME EXTENSION SPECIFIC
# -----------------------------------------------------------------------------

# Chrome Web Store Extension ID (for production)
VITE_EXTENSION_ID=your-extension-id-here

# Update check interval (in milliseconds)
VITE_UPDATE_CHECK_INTERVAL=3600000

# -----------------------------------------------------------------------------
# THIRD-PARTY SERVICES (Optional - for future integrations)
# -----------------------------------------------------------------------------

# LinkedIn API credentials (if using LinkedIn integration)
# VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id
# VITE_LINKEDIN_REDIRECT_URI=https://your-extension-callback-url

# Indeed API credentials (if scraping Indeed jobs)
# VITE_INDEED_PUBLISHER_ID=your-indeed-publisher-id

# -----------------------------------------------------------------------------
# PERFORMANCE & CACHING
# -----------------------------------------------------------------------------

# API request timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# Cache TTL for job listings (in milliseconds)
VITE_CACHE_TTL=300000

# Maximum number of cached items
VITE_MAX_CACHE_SIZE=100

# -----------------------------------------------------------------------------
# DEVELOPMENT ONLY
# -----------------------------------------------------------------------------

# Mock API responses (useful for testing without backend)
VITE_MOCK_API=false

# Simulate slow network (delay in milliseconds)
VITE_NETWORK_DELAY=0
