{
  "name": "aplifyai-extension",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "zip": "zip -r extension-production.zip dist",
    "deploy": "npm run build && npm run zip && gcloud storage cp extension-production.zip gs://aplifyai-assets-jobseek-459701/",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "test:local": "npm run test:all",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test tests/e2e",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "test:e2e:headed": "playwright test tests/e2e --headed",
    "test:e2e:debug": "playwright test tests/e2e --debug",
    "test:e2e:linkedin": "playwright test tests/e2e/linkedin.spec.js",
    "test:e2e:indeed": "playwright test tests/e2e/indeed.spec.js",
    "test:e2e:greenhouse": "playwright test tests/e2e/greenhouse.spec.js",
    "test:e2e:cross-site": "playwright test tests/e2e/cross-site.spec.js",
    "test:e2e:report": "playwright show-report",
    "test:performance": "playwright test tests/e2e/performance.spec.js",
    "test:performance:headed": "playwright test tests/e2e/performance.spec.js --headed",
    "test:security": "jest tests/security.test.js",
    "test:security:coverage": "jest tests/security.test.js --coverage",
    "test:all": "npm test && npm run test:security && npm run test:e2e && npm run test:performance"
  },
  "dependencies": {
    "@aplifyai/ui": "*",
    "@aplifyai/config": "*",
    "@aplifyai/types": "*",
    "@aplifyai/utils": "*",
    "@aplifyai/hooks": "*",
    "@aplifyai/constants": "*",
    "@aplifyai/api": "*",
    "@aplifyai/validation": "*",
    "@aplifyai/storage": "*",
    "@aplifyai/analytics": "*",
    "@aplifyai/errors": "*",
    "@aplifyai/logger": "*",
    "@aplifyai/test-utils": "*",
    "@aplifyai/flags": "*",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@tensorflow/tfjs": "^4.13.0",
    "framer-motion": "^11.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.30.1",
    "redux": "^5.0.1",
    "redux-saga": "^1.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.11",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^4.0.0",
    "vite": "^6.3.1"
  }
}