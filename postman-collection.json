{
    "info": {
        "name": "AmplifyAI Web API",
        "description": "Complete API collection for AmplifyAI - Authentication, Onboarding, Profile, Resumes, Cover Letters",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_postman_id": "amplifyai-web-api",
        "version": "2.0.0"
    },
    "item": [
        {
            "name": "Authentication",
            "description": "User authentication endpoints",
            "item": [
                {
                    "name": "Signup",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/api/auth/signup",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "signup"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
