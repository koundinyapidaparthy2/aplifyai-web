{
  "name": "aplifyai-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:extension": "npm run start --workspace=apps/extension",
    "dev:desktop": "npm run dev --workspace=apps/desktop",
    "build": "npm run build --workspaces",
    "build:all": "npm run build --workspaces",
    "build:web": "npm run build --workspace=apps/web",
    "build:extension": "npm run build --workspace=apps/extension",
    "build:desktop": "npm run build --workspace=apps/desktop",
    "build:packages": "npm run build -w @aplifyai/types -w @aplifyai/utils -w @aplifyai/hooks -w @aplifyai/constants -w @aplifyai/api -w @aplifyai/validation -w @aplifyai/storage -w @aplifyai/analytics -w @aplifyai/errors -w @aplifyai/logger -w @aplifyai/test-utils -w @aplifyai/flags -w @aplifyai/ui -w @aplifyai/config",
    "lint": "npm run lint --workspaces",
    "test:web:local": "npm run test:local --workspace=apps/web",
    "test:extension:local": "npm run test:local --workspace=apps/extension",
    "test:desktop:local": "npm run test:local --workspace=apps/desktop",
    "test:all:local": "npm run test:web:local && npm run test:extension:local && npm run test:desktop:local",
    "deploy:web": "npm run deploy --workspace=apps/web",
    "deploy:extension": "npm run deploy --workspace=apps/extension",
    "deploy:desktop": "npm run deploy --workspace=apps/desktop",
    "deploy:all": "npm run deploy:web && npm run deploy:extension && npm run deploy:desktop"
  },
  "devDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@google-cloud/vertexai": "^1.10.0"
  }
}
